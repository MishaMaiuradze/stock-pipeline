# ============================================================================
# Stock Pipeline Environment Configuration - EXAMPLE
# ============================================================================
# Copy this file to .env and customize for your environment
# cp .env.example .env
# ============================================================================

# ----------------------------------------------------------------------------
# Binance Configuration
# ----------------------------------------------------------------------------
# Cryptocurrency symbols to track (comma-separated, no spaces)
# Add or remove symbols as needed - changes take effect after container restart
# Popular symbols: BTCUSDT, ETHUSDT, BNBUSDT, ADAUSDT, SOLUSDT, DOGEUSDT, 
#                  MATICUSDT, DOTUSDT, LINKUSDT, AVAXUSDT, ATOMUSDT
BINANCE_SYMBOLS=BTCUSDT,ETHUSDT,BNBUSDT,ADAUSDT,SOLUSDT

# ----------------------------------------------------------------------------
# Kafka Configuration
# ----------------------------------------------------------------------------
KAFKA_BOOTSTRAP_SERVERS=kafka:9092
KAFKA_TOPIC=binance-prices
KAFKA_GROUP_ID=kafka-consumer-group

# Number of partitions for Kafka topic (affects parallelism)
# Recommendation: Set equal to max number of consumer instances you plan to run
KAFKA_NUM_PARTITIONS=3

# Replication & Reliability (keep at 1 for single broker setup)
KAFKA_OFFSETS_TOPIC_REPLICATION_FACTOR=1
KAFKA_TRANSACTION_STATE_LOG_REPLICATION_FACTOR=1
KAFKA_TRANSACTION_STATE_LOG_MIN_ISR=1
KAFKA_GROUP_INITIAL_REBALANCE_DELAY_MS=0

# Kafka Cluster (don't change unless you know what you're doing)
KAFKA_NODE_ID=1
CLUSTER_ID=MkU3OEVBNTcwNTJENDM2Qk

# ----------------------------------------------------------------------------
# PostgreSQL Configuration
# ----------------------------------------------------------------------------
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=stock_data
POSTGRES_USER=admin
POSTGRES_PASSWORD=admin123

# ----------------------------------------------------------------------------
# Spark Configuration
# ----------------------------------------------------------------------------
SPARK_MASTER_URL=spark://spark-master:7077

# ----------------------------------------------------------------------------
# Superset Configuration
# ----------------------------------------------------------------------------
# IMPORTANT: Change these credentials in production!
SUPERSET_SECRET_KEY=your-secret-key-change-in-production
SUPERSET_ADMIN_USERNAME=admin
SUPERSET_ADMIN_PASSWORD=admin123
SUPERSET_ADMIN_EMAIL=admin@superset.com

# ----------------------------------------------------------------------------
# Network & Ports
# ----------------------------------------------------------------------------
KAFKA_PORT=9092
KAFKA_CONTROLLER_PORT=9093
POSTGRES_PORT_EXTERNAL=5432
SPARK_MASTER_WEB_PORT=8080
SPARK_MASTER_PORT=7077
SUPERSET_PORT=8088

# ----------------------------------------------------------------------------
# Log Levels
# ----------------------------------------------------------------------------
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
